<% let pagina= 'Playlist'%>
  <%- include('includes/head.ejs', {pagina}); %>

  <body>
    <!--? Go Top -->
    <div id="progress">
      <i id="progressValue" class="fas fa-chevron-up"></i>
    </div>

    <%- include('includes/header.ejs'); %>

    <article class="content">
      <div class="content-title">
        <h3>Playlist</h3>
      </div>
      
      <form id="playlistForm" class="row g-2 justify-content-center">
        <div class="col-md-4">
          <input
            type="text"
            id="songName"
            class="form-control"
            placeholder="Nome Canzone"
            required
          />
        </div>
        <div class="col-md-4">
          <input
            type="text"
            id="author"
            class="form-control"
            placeholder="Autore"
            required
          />
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn custom-btn w-100">Aggiungi</button>
        </div>
      </form>

      <!--? Riquadro Playlist -->
      <div class="mt-4 p-3 bg-light border rounded">
        <h4 class="text-center">Playlist</h4>
        <table class="table table-bordered table-striped">
          <thead class="custom-thead">
            <tr>
              <th>Nome Canzone</th>
              <th>Autore</th>
              <th>Consigliata da</th>
            </tr>
          </thead>
          <tbody id="playlistTable">
            <!-- Le canzoni verranno aggiunte qui -->
          </tbody>
        </table>
      </div>

      <!-- Bottone Cancella Canzone -->
      <div class="d-flex justify-content-end mt-3">
        <button class="btn custom-btn">Cancella Canzone</button>
      </div>
    </div>

      
    </article>
    <%- include('includes/footer.ejs') %> 
    <%- include('includes/script.ejs') %>
    <script type="module" src="js/playlist.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
